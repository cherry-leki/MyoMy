<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="70dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:paddingTop="70dp"
    tools:context="com.example.leki.myogui.MainActivity"
    android:weightSum="5"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fitness" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:layout_weight="3"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp">
            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/exerciseButton"
                android:onClick="exerciseButtonClick"
                android:text="운동\n하기"
                android:background="@drawable/introbutton_setting"
                android:layout_marginRight="5dp"/>
            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/postureButton"
                android:onClick="postureButtonClick"
                android:text="자세\n교정"
                android:background="@drawable/introbutton_setting"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/caloriesButton"
                android:onClick="caloriesButtonClick"
                android:text="칼로리\n측정"
                android:background="@drawable/introbutton_setting"
                android:layout_marginRight="5dp"/>

            <Button
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:id="@+id/SampleButton"
                android:onClick="SampleButtonClick"
                android:text="분석"
                android:background="@drawable/introbutton_setting"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Development/myo_AndoridEMG-master/BLE_myo_Develop/app/src/main/res/layout/activity_menu.xml -->